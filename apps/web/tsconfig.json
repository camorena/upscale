{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "../../packages/ui/*"
      ],
      "@api/*": [
        "../../packages/api/*"
      ],
      "@ai/*": [
        "../../packages/ai/*"
      ],
      "@utils/*": [
        "../../packages/utils/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "components",
    "lib",
    ".next/types/**/*.ts"
  ]
}
